<body>
    
<div class = "container">
<form action="" class="form-group" id = "formVenda">
<br>
<label for="clientName">Nome do cliente:</label>
<select class="form-control" id="clientName" name="clientName" style="font-size: 20px;">
    <option selected>Selecione</option>
    <% Client.forEach( Client => { %>
        <option> <%= Client.firstName %> <%= Client.lastName %> </option>
    <% }) %>
</select>

<br>
<label for="productName" id = "labelAddProduct" style="cursor: pointer;">Adicionar produto <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z"/>
  <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z"/>
</svg></label>
<textarea name="productName" id="productName" class = "form-control" disabled style="width: 400px;"></textarea>


<br>
<label for="clientName">Valor do produto:</label>
<input type="text" name="productValue" id="productValue" class= "form-control" style="font-size: 20px;" disabled>

<br>
<label for="clientName">Forma de pagamento:</label>
<select type="text" name="productValue" id="productValue" class= "form-control" style="font-size: 20px;">
<option selected>Selecione</option>
<option >Cartão crédito</option>
<option >Cartão débito</option>
<option >Dinheiro</option>
<option >Cartão da loja</option>
<option >Carnê (boleto)</option>
</select>

<br>
<button class = "btn btn-primary" id = "btnCalcular">Calcular</button>

</form>



</div>    

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Selecione os produtos</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          

          <% Product.forEach( Product =>  { %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <div class="input-group-text">
                <input type="checkbox" aria-label="Checkbox for following text input"> 
              </div> 
            </div><br>
            <div  class="form-control"  id = "selectedProduct" style="color: rgba(0, 0, 255, 0.822); height: 60px;">
              <%= Product.productName %>
            </div>

            <div  class="form-control"  id = "selectedProduct" style="color: rgba(188, 188, 194, 0.445)85, 85, 87; height: 60px; vertical-align: middle; ">
              R$ <%= Product.priceToSell %>
            </div>
          </div>
        <% }) %>
          

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal" id = "btnAddProduct">Adicionar</button>
        </div>
      </div>
    </div>
  </div>

</body>

